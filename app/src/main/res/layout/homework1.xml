<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:onClick="homework1_start"
        android:text="播放"
        android:id="@+id/homework1_start"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="homework1_pause"
        android:id="@+id/homework1_pause"
        android:text="暂停"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="homework1_stop"
        android:id="@+id/homework1_stop"
        android:text="停止"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="homework1_stopservice"
        android:text="停止服务"
        android:id="@+id/homework1_stopservice"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:onClick="bindClick"
        android:text="绑定"
        android:id="@+id/homework1_bind"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:onClick="bindClick"
        android:text="BIND播放"
        android:id="@+id/homework1_bindstart"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="bindClick"
        android:id="@+id/homework1_bindpause"
        android:text="BIND暂停"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="bindClick"
        android:id="@+id/homework1_bindstop"
        android:text="BIND停止"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="bindClick"
        android:text="BIND停止服务"
        android:id="@+id/homework1_bindstopservice"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:onClick="bindClick"
        android:text="解绑"
        android:id="@+id/homework1_unbind"
        android:layout_height="wrap_content" />
</LinearLayout>
